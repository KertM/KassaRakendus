        <TextBox HorizontalAlignment="Left" Height="36.944" Margin="468.817,123.844,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85.69" TextChanged="TextBox_TextChanged_2" Name="KogusBox"/>
        <Label Content="Hind" HorizontalAlignment="Left" Margin="352.197,92.845,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="29.803" Width="59.549"/>
        <Label Content="Kogus" HorizontalAlignment="Left" Margin="468.817,92.845,0,0" VerticalAlignment="Top"/>
        <Button Content="Lisa" HorizontalAlignment="Left" Margin="675.31,98.895,0,0" VerticalAlignment="Top" Width="88.944" Height="29.789" Click="Button_Click"/>
        <Button Content="Eemalda" HorizontalAlignment="Left" Margin="675.31,130.999,0,0" VerticalAlignment="Top" Width="88.944" Height="29.789" Click="Button_Click_1"/>
        <Button Content="Osta" HorizontalAlignment="Left" Margin="424.197,249.789,0,0" VerticalAlignment="Top" Width="243.634" Height="35.211" Click="Button_Click_2"/>
        <Label Content="Ostukorv" HorizontalAlignment="Left" Margin="10,7.845,0,0" VerticalAlignment="Top"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="689.254,381.789,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="170" Margin="352.197,182,0,0" VerticalAlignment="Top" Width="386.803">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="150" Margin="9,9,0,0" VerticalAlignment="Top" Width="366.803">
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="130" Margin="9,9,0,0" VerticalAlignment="Top" Width="346.803">
                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="110" Margin="9,9,0,0" VerticalAlignment="Top" Width="326.803">
                        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="90" Margin="9,9,0,0" VerticalAlignment="Top" Width="306.803">
                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="70" Margin="9,9,0,0" VerticalAlignment="Top" Width="286.803">
                                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="50" Margin="9,9,0,0" VerticalAlignment="Top" Width="266.803"/>
                            </Border>
                        </Border>
                    </Border>
                </Border>
            </Border>
        </Border>

    </Grid>
</Window>
