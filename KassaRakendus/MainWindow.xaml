        </ListView>
        <Label Content="Nimetus" HorizontalAlignment="Left" Margin="352.197,33.845,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="352.197,64.845,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="412.057" TextChanged="TextBox_TextChanged" Name="NimetusBox"/>
        <TextBox HorizontalAlignment="Left" Text="1" Height="36.944" Margin="352.197,123.844,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85.69" TextChanged="TextBox_TextChanged_1" Name="HindBox" />
